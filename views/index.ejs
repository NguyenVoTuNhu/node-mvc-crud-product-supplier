<%- include('partials/header') %>

<h1>Suppliers</h1>
<a class="btn btn-primary mb-2" href="/suppliers/new">New Supplier</a>

<table class="table table-striped">
  <thead>
    <tr><th>Name</th><th>Address</th><th>Phone</th><th>Actions</th></tr>
  </thead>
  <tbody>
    <% suppliers.forEach(s => { %>
      <tr>
        <td><a href="/suppliers/<%= s._id %>"><%= s.name %></a></td>
        <td><%= s.address %></td>
        <td><%= s.phone %></td>
        <td>
          <a class="btn btn-sm btn-outline-secondary" href="/suppliers/<%= s._id %>/edit">Edit</a>
          <form action="/suppliers/<%= s._id %>?_method=DELETE" method="post" style="display:inline">
            <button class="btn btn-sm btn-danger" onclick="return confirm('Delete supplier and its products?')">Delete</button>
          </form>
        </td>
      </tr>
    <% }) %>
  </tbody>
</table>

<%- include('partials/footer') %>
